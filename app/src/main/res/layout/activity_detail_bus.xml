<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/detailbus_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alatsi"
        android:text="Detail Bus"
        android:textAlignment="center"
        android:textColor="#F4FD00"
        android:textSize="38sp" />

    <!--    Name Bus -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detailbus_name1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/alata"
            android:text="Bus name     : "
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/detailbus_name2"
            android:layout_width="209dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:text="-" />

    </LinearLayout>

    <!--    Capacity -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detailbus_capacity1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/alata"
            android:text="Capacity     : "
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/detailbus_capacity2"
            android:layout_width="209dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:text="-" />
    </LinearLayout>

        <!--    Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detailbus_price1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/alata"
                android:text="Price     : "
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/detailbus_price2"
                android:layout_width="209dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="17sp"
                tools:text="-" />

    </LinearLayout>

    <!--    Departure -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detailbus_departure1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/alata"
            android:text="Departure     : "
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/detailbus_departure2"
            android:layout_width="209dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:text="-" />
    </LinearLayout>

    <!--    Arrival -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detailbus_arrival1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/alata"
            android:text="Arrival     : "
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/detailbus_arrival2"
            android:layout_width="209dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:text="-" />
    </LinearLayout>

    <!--    Bus Type -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detailbus_bustype1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/alata"
            android:text="Bus Type     : "
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/detailbus_bustype2"
            android:layout_width="209dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:text="-" />

    </LinearLayout>

    <Button
        android:id="@+id/button_makebooking"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Make Booking" />
</LinearLayout>