<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/darkblue">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp">

        <TextView
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="#00DDCACA"
            android:text="Filter Bus"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:src="@drawable/baseline_directions_bus_24"
            app:tint="@color/black" />

        <Spinner
            android:id="@+id/bus_filter_dropdown"
            android:layout_width="229dp"
            android:layout_height="48dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="#689F38" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="425dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/alata"
        android:text="JBus"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="48sp" />

    <ListView
        android:id="@+id/list_bus"
        android:layout_width="380dp"
        android:layout_height="467dp"
        android:background="@color/white"
        android:backgroundTint="@color/transblack" />

    <LinearLayout
        android:id="@+id/pagination_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="21dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="21dp">

        <Button
            android:id="@+id/prev_page"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/baseline_arrow_back_24"
            android:minHeight="0dp" />

        <HorizontalScrollView
            android:id="@+id/page_number_scroll"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="25"
            android:paddingHorizontal="18dp">

            <LinearLayout
                android:id="@+id/btn_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <Button
            android:id="@+id/next_page"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/baseline_arrow_forward_24"
            android:minHeight="0dp" />

    </LinearLayout>

</LinearLayout>