<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/paymentdetail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alatsi"
        android:text="Payment Detail"
        android:textAlignment="center"
        android:textColor="#F4FD00"
        android:textSize="38sp" />

    <!--    Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/paymentdetail_statustitle1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/alata"
            android:text="Status     : "
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/paymentdetail_statustitle2"
            android:layout_width="209dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:text="-" />

    </LinearLayout>

    <!--    Rating -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/paymentdetail_ratingtitle1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/alata"
            android:text="Rating     : "
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/paymentdetail_ratingtitle2"
            android:layout_width="209dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:text="-" />

    </LinearLayout>

    <!--    Departure Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/paymentdetail_departuretitle1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/alata"
            android:text="Departure     : "
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/paymentdetail_departuretitle2"
            android:layout_width="209dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:text="-" />

    </LinearLayout>

    <!--    Button ACC -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#B51010"
            android:text="Cancel" />

        <Button
            android:id="@+id/button_accept"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#158C07"
            android:text="Accept" />
    </LinearLayout>

</LinearLayout>