<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    tools:context=".LoginActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/darkblue">


    <TextView
        android:id="@+id/reg_rent_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alatsi"
        android:text="Register Your Company"
        android:textAlignment="center"
        android:textColor="#E9FFDD00"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/reg_rent_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="Type your company name, address, and phone number"
        android:textAlignment="center"
        android:textColor="#E9FFFFFF"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/reg_rent_form"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/transblack"
        android:layout_marginHorizontal="36dp">

        <EditText
            android:id="@+id/company_reg_rent"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="#1BFFFFFF"
            android:drawableStart="@drawable/baseline_person_outline_24"
            android:fontFamily="@font/alata"
            android:hint="  Company Name"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/address_reg_rent"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="#1BFFFFFF"
            android:drawableStart="@android:drawable/ic_menu_mylocation"
            android:fontFamily="@font/alata"
            android:hint=" Address"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/phone_reg_rent"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="#1BFFFFFF"
            android:drawableStart="@android:drawable/stat_sys_phone_call"
            android:fontFamily="@font/alata"
            android:hint="  Phone Number"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/reg_rent_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/alata"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="REGISTER"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="15dp" />
</LinearLayout>